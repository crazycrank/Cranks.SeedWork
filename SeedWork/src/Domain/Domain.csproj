<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageTags>$(PackageTags) domain</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Collections.Immutable" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\analyzers\Domain.Analyzers\Domain.Analyzers.csproj" PrivateAssets="all" />
  </ItemGroup>

  <!-- include analyzer dll in analyzer folder-->
  <ItemGroup>
    <None Condition="Exists('$(OutputPath)\$(AssemblyName).Analyzers.dll')"
          Include="$(OutputPath)\$(AssemblyName).Analyzers.dll"
          Pack="true"
          PackagePath="analyzers\dotnet\cs"
          Visible="false" />
  </ItemGroup>


</Project>
  